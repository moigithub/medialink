extends index.pug

block content
  div(class='container')
    if messages.length
      div(class='alert alert-danger') #{messages}
    h3 Register
    form(action='/auth/signup' method="POST")
      div(class='form-group row')
        label(class='control-label col-sm-2', for='name') Name
        div(class='col-sm-10')
          input#name(type='text', name='name', class='form-control', placeholder='Enter your name' required)
      div(class='form-group row')
        label(class='control-label col-sm-2', for='email') e-Mail
        div(class='col-sm-10')
          input#email(type='text', name='email', class='form-control', placeholder='Enter your email' required)
      div(class='form-group row')
        label(class='control-label col-sm-2', for='password') Password
        div(class='col-sm-10')
          input#password(type='text', name='password', class='form-control', placeholder='Enter your password' required)
      div(class='form-group row')
        label(class='control-label col-sm-2', for='confirm') Confirm password
        div(class='col-sm-10')
          input#confirm(type='text', name='confirm', class='form-control', placeholder='re-enter password' required)
      button(type='submit', class='btn btn-success pull-right') Submit